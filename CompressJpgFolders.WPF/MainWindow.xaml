<Window x:Class="CompressJpgFolders.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompressJpgFolders.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
		<Button DockPanel.Dock="Bottom" Name="btnProcessFolders">Compress All Images Inside Folder</Button>
		<StackPanel>
            <Label HorizontalAlignment="Center">Please select folder</Label>
            <DockPanel>
                <TextBox Name="txtFolder" DockPanel.Dock="Left" Width="500"></TextBox>
                <Button DockPanel.Dock="Right" Name="btnSelectFolder">Select Folder</Button>
            </DockPanel>
            <TextBlock Height="300" Name="txtOutput">
                
            </TextBlock>
        </StackPanel>
	</DockPanel>
</Window>
